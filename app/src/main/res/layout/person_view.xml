<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="120sp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="2dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backGround"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/movie_fragment_poster"
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:src="@color/colorPrimary" />
        <TextView
            android:id="@+id/movie_fragment_name"
            android:layout_width="match_parent"
            android:textColor="@color/Black"
            android:maxLines="2"
            android:layout_marginBottom="2dp"
            android:textStyle="bold"
            android:textSize="10sp"
            android:textAppearance="@layout/large_view"
            android:layout_height="25sp"
            android:layout_gravity="bottom"
            android:paddingLeft="10dp"
            android:text="name"
            tools:ignore="ResourceCycle" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:visibility="gone"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/movie_fragment_rating"
                android:layout_width="wrap_content"
                android:textColor="@color/Black"
                android:textSize="10sp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:text="rating" />

            <ImageView
                android:src="@drawable/ic_grade_black_24dp"
                android:layout_width="10sp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|start"/>

        </LinearLayout>
        <TextView
            android:id="@+id/movie_fragment_genre"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="genre" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:visibility="gone"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="2dp"
            android:layout_gravity="end"
            android:id="@+id/like_button"
            android:src="@drawable/ic_favorite_border_black_24dp"/>

    </LinearLayout>
</android.support.v7.widget.CardView>